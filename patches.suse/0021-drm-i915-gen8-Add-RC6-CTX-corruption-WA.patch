+static void i915_rc6_ctx_wa_cleanup(struct drm_i915_private *i915)
+{
+	if (i915->gt_pm.rps.ctx_corrupted) {
+		intel_runtime_pm_put(i915);
+		i915->gt_pm.rps.ctx_corrupted = false;
+	}
+}
