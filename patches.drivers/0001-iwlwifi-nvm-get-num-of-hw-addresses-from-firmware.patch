+	if (empty_otp)
 		IWL_INFO(fwrt, "OTP is empty\n");
 
 	nvm = kzalloc(sizeof(*nvm) +
@@ -123,6 +126,11 @@ struct iwl_nvm_data *iwl_fw_get_nvm(stru
 
