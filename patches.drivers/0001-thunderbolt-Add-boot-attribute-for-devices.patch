 	&dev_attr_device_name.attr,
 	&dev_attr_key.attr,
@@ -978,6 +988,10 @@ static umode_t switch_attr_is_visible(st
 		if (sw->dma_port)
 			return attr->mode;
 		return 0;
+	} else if (attr == &dev_attr_boot.attr) {
+		if (tb_route(sw))
+			return attr->mode;
+		return 0;
 	}
 
 	return sw->safe_mode ? 0 : attr->mode;
